<div class="grid">
  <div
    class="
      h-96 w-full flex
      items-center mt-10
    "
  >
    <div
      class="
        relative bg-cover
        bg-center bg-no-repeat
        w-full h-96
        bg-gradient-to-r from-indigo-500
      "
      style="
        background-image:
          linear-gradient(to bottom, rgba(0, 0, 0, 0),
          rgba(0, 0, 0, 0.6)),
          url('<%= @nft_collections.first.image %>');
      "
    >
      <div
        class="
          absolute bottom-0
          ml-3 mb-3
          text-white font-bold
        "
      >
        <div class="text-3xl">
          <%= @nft_collections.first.name %>
        </div>
        <div class="text-xl">
          <%= @nft_collections.first.creater_name %>
        </div>
      </div>
    </div>
  </div>
  <div
    class="
      pt-10 pb-10 flex
      overflow-x-auto whitespace-nowrap
      gap-4 pr-4
    "
  >
    <% @nft_collections.each do |nft_collection|%>
      <%= link_to nft_collection_path(nft_collection) do %>
        <div
          class="
            relative w-80 h-48 flex-shrink-0
            bg-cover bg-center rounded-lg
          "
          id=<%= "#{nft_collection.contract_address}" %>
          style="background-image:
                  linear-gradient(to bottom, rgba(0, 0, 0, 0),
                  rgba(0, 0, 0, 0.3)),
                  url('<%= nft_collection.image %>');
                "
        >
          <div
            class="absolute top-0 ml-3 mt-3"
            id=<%= "#{ nft_collection.id }" %>
          >
            <%=
              image_tag nft_collection.creater_image,
              class: "h-16 w-16 object-cover rounded-full"
            %>
          </div>
  
          <div
            class="
              absolute bottom-0 ml-3 mb-3
              text-white font-bold
            "
            id="collection-name"
          >
            <%= nft_collection.name %>
          </div>
          <div id=<%= "#{nft_collection.creater_name}"%>></div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
